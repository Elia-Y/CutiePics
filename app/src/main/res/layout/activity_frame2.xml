<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".MultiPhotoSelectActivity">

    <Button
        android:id="@+id/frame_add_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_add_circle_24dp"
        android:onClick="selectImg"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637" />

    <ImageView
        android:id="@+id/text"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:layout_below="@+id/frame_add_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/text"/>

    <!-- the height of ImageView should be adjustable to different android phone -->
    <!-- We can realize this after -->

    <ImageView
        android:id="@+id/frameImage"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_below="@+id/frame_add_photo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="235dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/us" />
</RelativeLayout>
