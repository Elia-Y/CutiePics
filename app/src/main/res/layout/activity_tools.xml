<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/stickers"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        android:drawableStart="@drawable/ic_filter_vintage_24dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="190dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="Stickers"/>

    <Button
        android:id="@+id/frames"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        android:drawableStart="@drawable/ic_frame_24dp"
        android:layout_alignBaseline="@id/stickers"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="Frames"/>

    <Button
        android:id="@+id/layout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_layout_24dp"
        android:background="@drawable/my_button"
        android:layout_alignStart="@id/stickers"
        android:layout_below="@id/stickers"
        android:layout_marginTop="80dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="Layouts" />

    <Button
        android:id="@+id/doubleExposure"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_overlay_24dp"
        android:background="@drawable/my_button"
        android:layout_below="@id/frames"
        android:layout_alignBaseline="@id/layout"
        android:layout_alignStart="@id/frames"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="Overlay" />
</RelativeLayout>

